{
  "name": "Merisa",
  "description": "A Telegram group management bot.",
  "logo": "https://te.legra.ph/file/9fa2101b77407dbec7d31.jpg",
  "keywords": ["telegram", "Merisa", "python", "pyrogram"],

  "repository": "https://github.com/noob-mukesh/Merisa",
  "stack": "heroku-22",
  "addons": [
    {
      "options": {
        "version": "15"
      },
      "plan": "heroku-postgresql"
    }
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "telegram bot token here",
      "required": false
    },
    "STKR": {
      "description": "Sticker for start ",
      "required": false
    },
    "START_IMG": {
      "description": "Start Image For Bot.",
      "required": false
    },
    "API_ID": {
      "description": "telegram api id here",
      "required": false
    },
    "MONGO_DATABASE_URI":{
      "description": "MongoDB database URI",
      "required": true
    },
    "SUPPORT_GRP":{
      "description": "Support Group username without @",
      "required": false
    },
    "SUDOERS":{
      "description": "List of Sudoers",
      "required": false
    },
    "OWNER_ID":{
      "description": "Owner ID",
      "required": false
    },
    
    "UPDATE_CHNL":
    {
      "description": "Update Channel username without @",
      "required": false
    },
    
    "API_HASH": {
      "description": "telegram api hash here",
      "required": false
    }
  }
}
